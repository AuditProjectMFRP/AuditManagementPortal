@using Audit_management_portal.Controllers
@model Authorization_service.User

@{
    Layout = "~/Views/Shared/_FirstLayout.cshtml";
}
<!doctype html>
<html lang="en">
<head>
    
</head>
<body class="text-center" action="f" >
    @using(Html.BeginForm("Authenticate","Home"))
    {
        <img class="mb-4" src="/docs/4.5/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", autofocus = "",required=""})
        @Html.ValidationMessageFor(m => m.Name)
        <label for="inputPassword" class="sr-only">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "" })
        @Html.ValidationMessageFor(m => m.Password)
        <div class="checkbox mb-3"></div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2020</p>
    }

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function() {
            alert("@ViewBag.Message");
        };
    </script>
}

</body>
</html>
